<!DOCTYPE html>
<html>
<%- include('partials/head', {title:"Wally"}) %>
<div class="nav cover-container d-flex w-100 h-100 p-3 mx-auto flex-column nav-rosa">
  <%- include('partials/header') %>
</div>
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column" id="foto-principal">


  <!--FORMULÁRIO DE BUSCA-->
  <main role="main" class="inner cover">
    <div class="container d-flex justify-content-center col-9" id="caixa-de-busca">
      <form id="form-busca" action="/pacote" method="GET">
        <div class="form-row">
          <div class="form-group col-md-9">
            <label for="destino">Destino:</label>
            <input type="text" class="form-control" id="destino" placeholder="Insira aqui seu destino..." />
            <span id="input-destino"></span>
          </div>
          <div class="form-group col-md-3">
            <label for="hospedes">Hóspedes:</label>
            <select class="custom-select" id="hospedes">
              <option selected disabled value="">Selecione...</option>
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
              <option>6</option>
              <option>7</option>
              <option>8</option>
              <option>9</option>
              <option>10</option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="data-de-partida">Check-in:</label>
            <input type="date" class="form-control" name="ida" id="data-de-partida" />
          </div>
          <div class="form-group col-md-6">
            <label for="data-de-chegada">Check-out:</label>
            <input type="date" class="form-control" name="volta" id="data-de-chegada" />
          </div>
        </div>
        <div class="form-row justify-content-center">
          <button id="botao-caixa-busca" type="submit" class="btn btn-primary col-4">Buscar</button>
        </div>
      </form>
    </div>
  </main>
</div>

<!--SEÇÃO VIAGENS EM ALTA-->
<section class="container destaques mt-5">
  <h3 id="titulos-cards">Viagens em alta</h3>
  <h5 id="titulos-cards">Os pacotes mais comprados pelos usuários</h5>
  <div class="row justify-content-around mt-5">
    <% pacotes.forEach((pacote) => { %>
      <div class="card" style="width: 15rem;">
        <img src="/images/uploads/<%=pacote.imagem%>" class="card-img-top" alt="Tahiti" />
        <div class="card-body">
          <h5 class="card-title"><%= pacote.nome %></h5>
          <div class="card-text">
            <div class="row container-fluid mb-2">
              <% pacote.ambientes.forEach((ambiente) => { %>
                <h6><span class="badge badge-secondary"><%= ambiente.nome%></span></h6>
              <% }) %>
              <% pacote.atracoes.forEach((atracao) => { %>
                <h6><span class="badge badge-secondary ml-1"><%= atracao.nome%></span></h6>
              <% }) %>
            </div>
          </div>
              <% if (pacote.aereo) { %>
            <img src="../../images/airplane.png" class="img-fluid rating" alt="rating" /> 
          <% } %>
          <span class="card-link">R$<%= pacote.preco %> / pessoa</span>
        </div>
        <a id="botao-card" class="btn btn-primary textcolor text-center" href="/cadastro/<%=pacote.id%>"> Ver Pacote! </a>
      </div>
    <% }) %>
  </div>
</section>

